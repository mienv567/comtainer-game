<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_round_rect_solid_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <!--<View-->
        <!--android:layout_width="3dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:background="@color/main_color" />-->
        <ImageView
            android:layout_width="23dp"
            android:layout_height="17dp"
            android:src="@drawable/icon_mylive_repy"/>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/some_splendid_playback"
            android:textColor="@color/white"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_round_rect_solid_gray_small"
            android:gravity="center_horizontal">

            <com.fanwe.live.view.TabLeftImage
                android:id="@+id/left_tab_sort0"
                android:layout_width="50dp"
                android:layout_height="30dp">
            </com.fanwe.live.view.TabLeftImage>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/shape_round_rect_solid_gray_small"
            android:gravity="center_horizontal">

            <com.fanwe.live.view.TabLeftImage
                android:id="@+id/left_tab_sort1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="7dp">
            </com.fanwe.live.view.TabLeftImage>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>