<com.fanwe.live.view.SDProgressPullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_top1"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:background="@drawable/ic_live_player_rank_top1_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.fanwe.library.view.CircleImageView
                    android:id="@+id/iv_player_head_top1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/ic_female_head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-2dp"
                    android:text="TOP 1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_player_name_top1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:textColor="@color/live_text_color_light"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start|bottom"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_live_player_rank_top2_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.fanwe.library.view.CircleImageView
                    android:id="@+id/iv_player_head_top2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_female_head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="-2dp"
                    android:gravity="center"
                    android:text="TOP 2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_player_name_top2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:textColor="@color/live_text_color_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_live_player_rank_top3_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.fanwe.library.view.CircleImageView
                    android:id="@+id/iv_player_head_top3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_female_head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="-2dp"
                    android:gravity="center"
                    android:text="TOP 3"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_player_name_top3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:textColor="@color/live_text_color_light"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <com.fanwe.live.appview.NoScrollListView
            android:id="@+id/lv_players_rank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/live_divider_color_light"
            android:dividerHeight="@dimen/base_stroke_1dp" />
    </LinearLayout>
</com.fanwe.live.view.SDProgressPullToRefreshScrollView>

