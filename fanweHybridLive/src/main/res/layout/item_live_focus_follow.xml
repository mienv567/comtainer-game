<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_white_gray"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="12dp">

    <include layout="@layout/item_user_head"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            layout="@layout/item_name_sex_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_signature"
            style="@style/text_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_content"
            android:padding="0dp"
            android:text="@string/loading"
            android:textSize="12sp"
            />
    </LinearLayout>

    <!--<ImageView-->
        <!--android:id="@+id/cb_focus"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:background="@drawable/selector_item_focus_follow_cb"-->
        <!--android:button="@null"/>-->
    <RelativeLayout
        android:id="@+id/ll_has_follow"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_follow_selected"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_right"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_follow_selected"/>
        <TextView
            android:id="@+id/has_follow"
            android:layout_toRightOf="@id/img_right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="@string/already_follow"/>
        <View
            android:id="@+id/division"
            android:layout_toRightOf="@id/has_follow"
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/division"/>
        <ImageView
            android:id="@+id/img_push"
            android:layout_toRightOf="@id/division"
            android:layout_marginLeft="10dp"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_push_open"/>
        <View
            android:id="@+id/v_click_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/division"/>
        <View
            android:id="@+id/v_click_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/division"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_follow"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_follow_not_selected"
        android:visibility="gone">
        <ImageView
            android:id="@+id/img_plus"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_follow_plus"/>
        <TextView
            android:id="@+id/follow"
            android:layout_toRightOf="@id/img_plus"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:text="@string/follow"/>
    </RelativeLayout>
</LinearLayout>