<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_gift"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:id="@+id/ll_charge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_diamond_white" />

            <TextView
                android:id="@+id/tv_diamonds"
                style="@style/text_base_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="#fff" />

            <TextView
                style="@style/text_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/recharge"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_arrow_right_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_send_gift"
            style="@style/btn_base"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="end|center"
            android:background="@drawable/selector_live_button"
            android:minWidth="56dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/send"
            android:textColor="@color/black_d"
            android:textSize="15sp" />
    </FrameLayout>
</LinearLayout>