<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/segment_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        tl:tl_bar_color="@color/transparent_white"
        tl:tl_bar_stroke_width="0dp"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_color="@color/live_orange"
        tl:tl_indicator_margin_bottom="3dp"
        tl:tl_indicator_margin_left="3dp"
        tl:tl_indicator_margin_right="3dp"
        tl:tl_indicator_margin_top="3dp"
        tl:tl_textBold="SELECT" />

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp" />

</LinearLayout>