<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ic_lose_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_mission_result_ribbon_gray" />

    <TextView
        android:id="@+id/tv_congratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/mission_failed"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_slogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抱歉啦!任务失败!!"
            android:textColor="@color/live_text_color_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_player_mission_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如果获得70%奖励将扣除"
            android:textColor="@color/live_text_color_light"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_player_gain_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+30"
            android:textColor="#f03436"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_honor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="场外粉丝 获得"
            android:textColor="#f03436"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_default_head" />

            <TextView
                android:id="@+id/tv_honor_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="x3"
                android:textColor="@color/live_text_color_light" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_orange_rect_corners_half_circle"
                android:text="接受"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_deny"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_corner10_gray"
                android:text="拒绝"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>