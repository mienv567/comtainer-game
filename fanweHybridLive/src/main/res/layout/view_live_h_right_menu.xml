<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fl_panel_container_r"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_task"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_live_right_menu_task"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="任务"
            android:textColor="@drawable/selector_live_tab_text_color"
            android:textSize="@dimen/base_textsize_12" />

        <View
            android:layout_width="50dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/tv_gift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_live_right_menu_props"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="道具"
            android:textColor="@drawable/selector_live_tab_text_color"
            android:textSize="@dimen/base_textsize_12" />

        <View
            android:layout_width="50dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_live_right_menu_share"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="分享"
            android:textColor="@drawable/selector_live_tab_text_color"
            android:textSize="@dimen/base_textsize_12" />

        <View
            android:layout_width="50dp"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selector_live_right_menu_order"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="排行榜"
            android:textColor="@drawable/selector_live_tab_text_color"
            android:textSize="@dimen/base_textsize_12" />
    </LinearLayout>
</LinearLayout>