<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/main_color">

                <FrameLayout
                    android:id="@+id/fl_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <com.fanwe.library.view.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_head"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_default_head"
                        app:civ_border_color="@color/stroke_head_image"
                        app:civ_border_width="0dp" />

                    <com.fanwe.library.view.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/iv_level"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        app:civ_border_color="@color/stroke_head_image"
                        app:civ_border_width="1dp" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_male_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fl_head"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_global_male"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_global_male" />

                    <ImageView
                        android:id="@+id/iv_rank"
                        android:layout_width="30dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/rank_1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nick_name"
                    style="@style/text_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_male_rank"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:gravity="center"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/iv_sign_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_sign_off"
                    android:layout_marginTop="13dp" />
                <TextView
                    android:id="@+id/tv_sign_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_1"
                    android:layout_marginTop="12dp"
                    android:text="11.1"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
                <View
                    android:id="@+id/v_sign_1"
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@id/iv_sign_1"
                    android:background="@color/gray" />
                <ImageView
                    android:id="@+id/iv_sign_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/v_sign_1"
                    android:src="@drawable/ic_sign_off"
                    android:layout_marginTop="13dp" />
                <TextView
                    android:id="@+id/tv_sign_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_2"
                    android:layout_toRightOf="@id/v_sign_1"
                    android:layout_marginTop="12dp"
                    android:text="11.2"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
                <View
                    android:id="@+id/v_sign_2"
                    android:layout_width="78dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@id/iv_sign_2"
                    android:background="@color/gray" />
                <ImageView
                    android:id="@+id/iv_sign_3"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_sign_2"
                    android:src="@drawable/ic_gift_small_off" />
                <TextView
                    android:id="@+id/tv_sign_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_3"
                    android:layout_toRightOf="@id/tv_sign_2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="11.3"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/iv_sign_4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/v_sign_2"
                    android:src="@drawable/ic_sign_off"
                    android:layout_marginTop="13dp" />
                <TextView
                    android:id="@+id/tv_sign_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_4"
                    android:layout_toRightOf="@id/v_sign_2"
                    android:layout_marginTop="12dp"
                    android:text="11.4"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
                <View
                    android:id="@+id/v_sign_4"
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@id/iv_sign_4"
                    android:background="@color/gray" />
                <ImageView
                    android:id="@+id/iv_sign_5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/v_sign_4"
                    android:src="@drawable/ic_sign_off"
                    android:layout_marginTop="13dp" />
                <TextView
                    android:id="@+id/tv_sign_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_5"
                    android:layout_toRightOf="@id/v_sign_4"
                    android:layout_marginTop="12dp"
                    android:text="11.5"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
                <View
                    android:id="@+id/v_sign_5"
                    android:layout_width="25dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@id/iv_sign_5"
                    android:background="@color/gray" />
                <ImageView
                    android:id="@+id/iv_sign_6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/v_sign_5"
                    android:src="@drawable/ic_sign_off"
                    android:layout_marginTop="13dp" />
                <TextView
                    android:id="@+id/tv_sign_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_6"
                    android:layout_toRightOf="@id/v_sign_5"
                    android:layout_marginTop="12dp"
                    android:text="11.6"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
                <View
                    android:id="@+id/v_sign_6"
                    android:layout_width="55dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@id/iv_sign_6"
                    android:background="@color/gray" />
                <ImageView
                    android:id="@+id/iv_sign_7"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_sign_6"
                    android:src="@drawable/ic_gift_big_off"
                    android:layout_marginTop="2dp" />
                <TextView
                    android:id="@+id/tv_sign_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sign_7"
                    android:layout_toRightOf="@id/iv_sign_6"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:text="11.7"
                    android:textColor="#8d8b8b"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_sign"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_room_creater_finish_confirm"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:text="@string/sign_immediately"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!--签到周期-->
            <LinearLayout
                android:id="@+id/ll_cycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp">
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_circle_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_circle"
                    android:textColor="#9f9f9f"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_datacycle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9f9f9f"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp">
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_circle_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/everyday_sign_improve_level"
                    android:textColor="#9f9f9f"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp">
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_circle_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/continuous_sign"
                    android:textColor="#9f9f9f"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="25dp"
                android:paddingLeft="30dp">
                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_circle_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/detail_rule_click_more"
                    android:textColor="#9f9f9f"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
