<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    android:background="#FBFBFB">

    <include
        layout="@layout/include_title_simple" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
        <com.fanwe.library.customview.ClearEditText
            android:id="@+id/et_edit_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_activity_topic_white_corner"
            android:maxLines="2"
            android:maxLength="32"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_text_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_edit_dialog"
            android:gravity="right"
            android:layout_marginTop="8dp"
            android:text="0/0"/>
    </RelativeLayout>
</LinearLayout>