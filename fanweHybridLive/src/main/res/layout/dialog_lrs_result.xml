<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layer_black_corner_15dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:minHeight="30dp"
            android:textColor="#8d8b8b"
            android:textSize="18sp"/>



        <LinearLayout
            android:id="@+id/ll_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_dialog_default_close"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#d93c3c"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="阵型"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#d93c3c"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="号码"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#d93c3c"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="职业"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#d93c3c"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="玩家名称"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="#444141"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_result_one_zy"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:paddingTop="2dp"
                android:text="民"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:background="@drawable/ic_lrs_result_man"/>
            <TextView
                android:id="@+id/tv_result_one_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/lrs_result_win"
                android:text="加载中"
                android:textSize="16sp"
                android:gravity="center_horizontal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="5dp">
            <com.fanwe.library.view.SDRecyclerView
                android:id="@+id/list_view_1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:overScrollMode="never"
                android:scrollbars="none"/>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="#444141"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_result_two_zy"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:paddingTop="2dp"
                android:text="狼"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:background="@drawable/ic_lrs_result_wolf"/>
            <TextView
                android:id="@+id/tv_result_two_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/lrs_result_fail"
                android:text="加载中"
                android:textSize="16sp"
                android:gravity="center_horizontal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="5dp">
            <com.fanwe.library.view.SDRecyclerView
                android:id="@+id/list_view_2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:overScrollMode="never"
                android:scrollbars="none"/>

        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_lrs_result_confirm"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>