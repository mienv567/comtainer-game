<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item0"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gesture_node_normal" />

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_gesture_node_normal" />

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gesture_node_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item3"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gesture_node_normal" />

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item4"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_gesture_node_normal" />

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gesture_node_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gesture_node_normal" />

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_gesture_node_normal" />

        <com.fanwe.library.customview.SDGestureItemView
            android:id="@+id/view_password_item8"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gesture_node_normal" />
    </LinearLayout>

</LinearLayout>