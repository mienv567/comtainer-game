<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_menu_tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_dialog_item"
        android:gravity="center"
        android:text="标题"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_dialog_title"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/dialog_menu_ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/dialog_menu_lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp" >
        </ListView>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_menu_tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_dialog_item"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_dialog_button" />

</LinearLayout>