<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_add_treemember"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_frag_default"
    android:padding="10dp"
    tools:context="com.qy.ysys.yishengyishi.views.AddTreeMemberActivity">

    <LinearLayout
        android:id="@+id/ll_male"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_share_roundedrectangle_lightblue_addmenber1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ll_male_title"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/bg_share_roundedrectangle_lightblue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.qy.ysys.yishengyishi.views.customviews.CircleImageView
                android:layout_width="@dimen/icon_head_middle_width"
                android:layout_height="@dimen/icon_head_middle_height"
                android:src="@mipmap/ic_male_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="姓名"
                        android:textColor="@color/colorTitleTextGray"
                        android:textColorHint="@color/colorTitleTextGray"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/et_malename"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#2A3C50" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ic_book2" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="+86"
                        android:textColor="@color/colorTitleTextGray"
                        android:textColorHint="@color/colorTitleTextGray"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/et_malephone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#2A3C50" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/ic_weixin" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="微信邀请"
                        android:textColor="@color/colorTitleTextGray"
                        android:textColorHint="@color/colorTitleTextGray"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_female"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/ll_male"
        android:background="@drawable/bg_share_roundedrectangle_lightblue_addmenber2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ll_female_title"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/bg_share_roundedrectangle_lightblue_addmenber3"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.qy.ysys.yishengyishi.views.customviews.CircleImageView
                android:layout_width="@dimen/icon_head_middle_width"
                android:layout_height="@dimen/icon_head_middle_height"
                android:src="@mipmap/ic_female_head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="姓名"
                        android:textColor="@color/colorTitleTextGray"
                        android:textColorHint="@color/colorTitleTextGray"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/et_femalename"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:background="#6F3F3F" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/ic_book2" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:text="+86"
                        android:textColor="@color/colorTitleTextGray"
                        android:textColorHint="@color/colorTitleTextGray"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/et_femalephone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:background="#6F3F3F" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@mipmap/ic_weixin" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="微信邀请"
                        android:textColor="@color/colorTitleTextGray"
                        android:textColorHint="@color/colorTitleTextGray"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_share_roundedrectangle_gray"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="取消"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_share_roundedrectangle_lightblue"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="添加"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>

</RelativeLayout>
