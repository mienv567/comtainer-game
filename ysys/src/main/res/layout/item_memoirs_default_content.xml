<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/bg_frag_deepen"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:textColor="@color/colorTitleTextGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天加班好开心...." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_head_middle_width"
            android:layout_height="@dimen/icon_head_middle_height"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="@dimen/icon_head_middle_width"
            android:layout_height="@dimen/icon_head_middle_height"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="@dimen/icon_head_middle_width"
            android:layout_height="@dimen/icon_head_middle_height"
            android:layout_marginTop="3dp"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="#默认"
        android:textColor="@color/textlightblue" />
</LinearLayout>