<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/live_bg_normal">

    <TextView
        android:id="@+id/tv_editstore_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/selector_corner10_yellow"
        android:gravity="center"
        android:padding="5dp"
        android:text="发布"
        android:textColor="@android:color/black"
        android:textSize="@dimen/button_text_size" />

    <ScrollView
        android:layout_above="@id/tv_editstore_save"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="输入文字"
                    android:textColor="@color/live_text_color_light"
                    android:textColorHint="@color/colorTitleTextGray" />

                <View style="@style/horizontal_divider_light" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp">

                    <ImageView
                        android:id="@+id/iv_take_photo"
                        android:layout_width="@dimen/icon_head_small_width"
                        android:layout_height="@dimen/icon_head_small_height"
                        android:background="#363C48"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:src="@mipmap/ic_camera" />

                    <ImageView
                        android:id="@+id/iv_gallery"
                        android:layout_width="@dimen/icon_head_small_width"
                        android:layout_height="@dimen/icon_head_small_height"
                        android:background="#363C48"
                        android:src="@mipmap/ic_photo" />

                </LinearLayout>
            </LinearLayout>

            <com.qy.ysys.yishengyishi.widgets.MultiImageView
                android:id="@+id/multiImagView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/bg_frag_deepen"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_left_big_width"
                        android:layout_height="@dimen/icon_left_big_height"
                        android:background="@mipmap/ic_local" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="故事发生的地点"
                        android:textColor="@color/colorTitleTextGray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_left_big_width"
                        android:layout_height="@dimen/icon_left_big_height"
                        android:background="@mipmap/ic_clock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="故事发生的时间"
                        android:textColor="@color/colorTitleTextGray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_left_big_width"
                        android:layout_height="@dimen/icon_left_big_height"
                        android:background="@mipmap/ic_file" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="保存故事"
                        android:textColor="@color/colorTitleTextGray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_left_big_width"
                        android:layout_height="@dimen/icon_left_big_height"
                        android:background="@mipmap/ic_eye" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="谁可以看"
                        android:textColor="@color/colorTitleTextGray"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/colorTitleBarSeparator" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>